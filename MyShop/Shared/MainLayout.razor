@inherits LayoutComponentBase

<PageTitle>ShopApp.Web</PageTitle>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (!_isAuthenticated)
            {
                <NavLink class="nav-link m-0" href="/identity/account/login" Match="NavLinkMatch.All">
                    <button class="btn btn-info">Login</button>
                </NavLink>
                <NavLink class="nav-link m-0" href="/identity/account/register" Match="NavLinkMatch.All">
                    <button class="btn btn-info">Register</button>
                </NavLink>
            }
            else
            {

                <NavLink class="nav-link m-0" href="/identity/account/logout" Match="NavLinkMatch.All">
                    <button class="btn btn-info">Logout</button>
                </NavLink>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<RadzenContextMenu />
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />

@code {

    [CascadingParameter]
    public Task<AuthenticationState>? AuthenticationStateTask { get; set; }

    private bool _isAuthenticated = false;

    protected override async Task OnInitializedAsync()
    {
        if (AuthenticationStateTask is null)
        {
            return;
        }

        var authState = await AuthenticationStateTask;
        var user = authState.User;

        _isAuthenticated = user.Identity.IsAuthenticated;
    }

}